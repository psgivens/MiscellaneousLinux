{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpack",
            "command": "webpack",
            "args": []
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "build",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "full-build",
            "command": "npm",
            "args": [
                "run",
                "full-build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "clean",
            "problemMatcher": []
        }
    ]
}